<!--components/header_msg/index.wxml-->
<view class="header">
	<view class="title">{{title}}</view>
	<view class="right" wx:if="{{showRight}}" bindtap="handleRight">
		<view class="slot">
			<slot></slot>
		</view>
		<view class="default">
			<text class="text">{{rightText}}</text>
			<image class="icon" src="/assets/icon/right.png"></image>
		</view>
	</view>
</view>