/* pages/music_search/index.wxss */
page {
	padding: 0 20rpx;
	padding-top: 60px;
}

.search{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
}

.hot {
	padding: 10rpx;
}

.hot .list {
	display: flex;
	flex-wrap: wrap;
}

.hot .tag {
	font-size: 26rpx;
	background-color: #fff;
	padding: 10rpx 12rpx;
	border-radius: 16rpx;
	margin-right: 20rpx;
	margin-top: 20rpx;
}

.hot .tag:first-of-type {
	color: #26ce8a;
}
/* 搜索 */
.suggest {
	padding: 10rpx;
}

.suggest .title {
	color: #26ce8a;
	font-size: 34rpx;
	font-weight: 700;
}

.suggest .item {
	display: flex;
	align-items: center;
	margin-top: 16rpx;
}

.suggest .item .icon {
	width: 60rpx;
	margin-left: -6rpx;
}

.suggest .item .text {
	font-size: 28rpx;
}

.result .title {
	color: forestgreen;
}